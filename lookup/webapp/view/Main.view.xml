<mvc:View controllerName="dlw.lookup.controller.Main" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form" 
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">
   
    <html:div id="scandit-barcode-picker" style="max-height: 99%"></html:div> 
    <Button class="cancelScanner" id="btnCancelScan" text="{i18n>CANCEL}" visible="{MainModel>/scannerVisible}" press=".onPressCancelScan" type="Emphasized"></Button>
     
    <Page id="page" title="{i18n>title}">
        <content>
            <f:SimpleForm id="FieldGroupView" editable="true" layout="ResponsiveGridLayout" labelSpanXL="6" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" singleContainerFullSize="false">
                <f:content>
                    <!-- Warehouse -->
                    <Label id="lblWarehouse" text="{i18n>WAREHOUSE}" visible="{= ${MainModel>/rlVisible} === false ? true : false}" />
                    <MultiInput id="miWarehouse" valueHelpOnly="true" showValueHelp="true" valueHelpRequest=".handleWHValueHelp"  showSuggestion="false" submit=".onSubmitMI" visible="{= ${MainModel>/rlVisible} === false ? true : false}"/>

                    <!-- BIN -->
                    <Label id="lblBin" text="{i18n>BIN}" visible="{= ${MainModel>/rlVisible} === false ? true : false}"/>
                    <Input id="inpBin" required="false" value="{MainModel>/query/bin}" submit=".onBinSubmit" change=".handleBinChange" visible="{= ${MainModel>/rlVisible} === false ? true : false}">
                        <layoutData>
                            <l:GridData id="gridBin" span="XL6 L6 M6 S9"/>
                        </layoutData>
                    </Input>
                    <Button id="btnScan" icon="sap-icon://bar-code" press=".onPressScanBin" visible="{= ${MainModel>/rlVisible} === false ? true : false}">
                        <layoutData>
                            <l:GridData id="gridScanBtn" span="XL2 L2 M2 S3"/>
                        </layoutData>
                    </Button>

                    <!-- PartNumber -->
                    <Label id="lblPartNumber" text="{i18n>PART_NUMBER}" visible="{= ${MainModel>/rlVisible} === false ? true : false}"/>
                    <Input id="inpPartNumber" required="false" value="{MainModel>/query/partNr}" submit=".onPartNrSubmit" change=".onPartNrChange" visible="{= ${MainModel>/rlVisible} === false ? true : false}">
                        <layoutData>
                            <l:GridData id="gridPart" span="XL6 L6 M6 S9"/>
                        </layoutData>
                    </Input>
                    <Button id="btnPart" icon="sap-icon://bar-code" press=".onPressScanPart" visible="{= ${MainModel>/rlVisible} === false ? true : false}">
                        <layoutData>
                            <l:GridData id="gridPartBtn" span="XL2 L2 M2 S3"/>
                        </layoutData>
                    </Button>

                    <!-- PART_DESCRIPTION -->
                    <Label id="lblPartDesc" text="{i18n>PART_DESCRIPTION}" visible="{= ${MainModel>/rlVisible} === false ? true : false}"/>
                    <Input id="inpPartDesc" required="false" value="{MainModel>/query/partDesc}" submit=".onPartDescSubmit" change=".onLiveChange" visible="{= ${MainModel>/rlVisible} === false ? true : false}"></Input>
                    
                    <!-- SERIAL NUMBER -->
                    <Label id="lblSerial" text="{i18n>SERIAL_NUMBER}" />
                    <Input id="inpSerialNumber" required="false" value="{MainModel>/query/serialNr}" submit=".onSNSubmit" change=".onLiveChange">
                        <layoutData>
                            <l:GridData id="gridSn" span="XL6 L6 M6 S9"/>
                        </layoutData>
                    </Input>
                    <Button id="btnScanSN" icon="sap-icon://bar-code" press=".onPressScanSN" >
                        <layoutData>
                            <l:GridData id="gridScan" span="XL2 L2 M2 S3"/>
                        </layoutData>
                    </Button>

                    <!-- Batch -->
                    <Label id="lblBatch" text="{i18n>BATCH_NUMBER}" visible="{= ${MainModel>/rlVisible} === false ? true : false}"/>
                    <Input id="inpBatch" required="false" value="{MainModel>/query/batchNr}" submit=".onBatchSubmit" change=".onLiveChange" visible="{= ${MainModel>/rlVisible} === false ? true : false}"></Input>
                    
                    <!-- RL Disposition -->
                    <!-- <Label id="lblDisposition" text="" />
                    <SegmentedButton id="sbRL" selectedKey="L" width="100%" selectionChange=".onRLChange" class="sapUiTinylMarginTop">
                        <items>
                            <SegmentedButtonItem id="sbiLookup" text="{i18n>LOOKUP}" key="L"/>
                            <SegmentedButtonItem id="sbiRL" text="{i18n>RLDISPOSITION}" key="R" />
                        </items>
                    </SegmentedButton> -->
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1" width="100%" height="46px" design="Auto" enabled="true" visible="true">
                <content>
                    <ToolbarSpacer id="_IDGenToolbarSpacer1" width=""/>
                    <Button id="btnGo" text="{i18n>GO}" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press=".onPressGo"/>
                </content>
            </OverflowToolbar>
        </footer>
        <headerContent>
            <Image id="_IDGenImage1" src="{ImageModel>/path}/resource/logo.jpg" backgroundSize="cover" width="1.5em"/>
        </headerContent>
    </Page>
           
</mvc:View>
