<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="dlw.lookup.controller.Productions" xmlns="sap.m" xmlns:layout="sap.ui.layout">
    <Page id="Productions" showHeader="true" title="{i18n>PRODUCTIONS}" showFooter="true" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <List id="listProduct" class="sapUiResponsiveMargin" noDataText="{i18n>NO_DATA}" mode="None" showSeparators="All" growing="true" 
                items="{/LookupInputSet}" updateFinished=".onUpdateFinished"
                growingThreshold="20"  growingScrollToLoad="true">
                <CustomListItem id="cli">
                    <VBox id="vb" class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom">
                        <HBox id="hb0" class="sapUiTinyMarginTop sapUiTinyMarginBottom" >
                            <Label id="osWh" class="lookup_cell_subject"
                                    text="{path: 'Lgnum', formatter: '.formatter.getWHDesc'}"
                                    design="Bold" />
                        </HBox>
                        <HBox id="hb1" class="sapUiTinyMarginBottom" >
                            <ObjectStatus id="osPart" class="sapUiTinyMarginEnd"
                                    text="{PartDesc}"
                                    state="Information" />
                        </HBox>
                        <HBox id="hb2" class="sapUiTinyMarginBottom" >
                            <ObjectStatus id="obPart" state="None"
                                class="lookupPart sapUiTinyMarginEnd"
                                text="{i18n>PART}"
                                    />
                            <ObjectStatus id="osPartNum" class="sapUiTinyMarginEnd"
                                    text="{PartNum}"
                                    state="Information" />
                        </HBox>
                        <!-- Bin & Qty & BatchNum -->
                        <HBox id="hb3" class="sapUiTinyMarginBottom" width="100%" visible="{= ${MainModel>/rlVisible} === false ? true : false}">
                            <HBox id="hb21" width="auto" class="sapUiSmallMarginEnd">
                                <ObjectStatus id="lbBin"
                                    class="sapUiTinyMarginEnd"
                                    text="{i18n>BIN}"
                                    state="None" />
                                <ObjectStatus id="osBin"
                                    text="{Bin}"
                                    state="Information" />
                            </HBox>
                            <HBox id="hb22" width="auto" class="sapUiSmallMarginEnd">
                                <ObjectStatus id="lbQty"
                                    class="sapUiTinyMarginEnd"
                                    text="{i18n>QTY}"
                                    state="None" />
                                <ObjectStatus id="osQty"
                                    text="{Qty} {Uom}"
                                    state="Information" />
                            </HBox>
                            <!-- <ObjectStatus id="osBatch"
                                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                    text="{BatchNum}"
                                    visible="{= ${BatchNum} === ''? false : true}"
                                    state="Information" /> -->
                        </HBox>

                        <!-- StockType & Disposition & Ser -->
                        <HBox id="hb4" visible="{= ${MainModel>/rlVisible} === false ? true : false}">
                            <ObjectStatus id="osBatch"
                                class="sapUiTinyMarginTop sapUiTinyMarginEnd"
                                text="{BatchNum}"
                                visible="{= ${BatchNum} === ''? false : true}"
                                state="Information" />
                            <!-- <ObjectStatus id="osStock"
                                class="sapUiTinyMarginTop sapUiSmallMarginEnd"
                                text="{StockType}"
                                state="Information" /> -->
                            <ObjectStatus id="osDep"
                                class="sapUiTinyMarginTop sapUiTinyMarginBegin"
                                text="{Disposition}"
                                state="Information" />
                            <Button id="btnSN" class="sapUiSmallMarginBegin" text="{i18n>SER}" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="{Ser}" iconDensityAware="false" press=".onPressSN"/>
                        </HBox>

                        <!-- DISPOSITION -->
                        <HBox id="hb5" visible="{= ${MainModel>/rlVisible} === true ? true : false}">
                            <ObjectStatus id="lbDisposition"
                                    class="sapUiTinyMarginEnd"
                                    text="{i18n>DISPOSITION}"
                                    state="None" />
                             <ObjectStatus id="osDisposition"
                                    text="{Disposition}"
                                    state="Information" />
                        </HBox>
                    </VBox>
                </CustomListItem>
            </List>
        </content>
        <footer/>
        <headerContent/>
        <subHeader/>
        <customHeader/>
    </Page>
</mvc:View>
